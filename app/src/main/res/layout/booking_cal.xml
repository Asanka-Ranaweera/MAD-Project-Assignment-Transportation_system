<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9BBD9E"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PassengerRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg"
            android:padding="@dimen/btn_medium"
            android:text="Make a booking now"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="504dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="72dp">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="400dp"
            android:layout_height="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/form"
                android:paddingTop="10dp"
                android:paddingRight="@dimen/form"
                android:paddingBottom="32dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout"
                    android:background="@drawable/edttxt_background"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txr_trans"
                    tools:layout_editor_absoluteX="20dp">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selected Transport Service"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/VecOwnerName"
                            android:textColor="#0F7015"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mr. S. Perera"
                            android:textAlignment="textEnd"
                            android:textColor="#5b5b5b"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Type"
                            android:textColor="#0F7015"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Address"
                            android:layout_width="189dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ServiceType"
                            android:textAlignment="textEnd"
                            android:textColor="#5b5b5b"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/vType"
                            android:textColor="#0F7015"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Address"
                            android:layout_width="189dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bus"
                            android:textAlignment="textEnd"
                            android:textColor="#5b5b5b"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/StartingPoint"
                            android:textColor="#0F7015"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtAddress2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/EndingPoint"
                            android:textColor="#0F7015"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fee"
                            android:textColor="#0F7015"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/Gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rs.0.00"
                            android:textAlignment="textEnd"
                            android:textColor="#5b5b5b"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginTop="@dimen/form"
                    android:layout_marginRight="@dimen/form"
                    android:text="@string/name"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/txtnormal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginRight="@dimen/form"
                    android:layout_marginBottom="@dimen/form"
                    android:background="@drawable/edttxt_background"
                    android:ems="10"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/PostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginTop="@dimen/form"
                    android:layout_marginRight="@dimen/form"
                    android:text="@string/pno"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/txtnormal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginRight="@dimen/form"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edttxt_background"
                    android:ems="10"
                    android:hint="@string/pno"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/PhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/form"
                    android:text="@string/pickPoint"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/txtnormal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_pno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginRight="@dimen/form"
                    android:layout_marginBottom="@dimen/form"
                    android:background="@drawable/edttxt_background"
                    android:ems="10"
                    android:hint="Enter your pick up point"
                    android:inputType="@android:string/emptyPhoneNumber"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/form"
                    android:text="@string/desPoint"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/txtnormal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_pno2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginRight="@dimen/form"
                    android:layout_marginBottom="@dimen/form"
                    android:background="@drawable/edttxt_background"
                    android:ems="10"
                    android:hint="Enter your drop point"
                    android:inputType="@android:string/emptyPhoneNumber"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/PostContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginTop="@dimen/form"
                    android:layout_marginRight="@dimen/form"
                    android:text="@string/passMessage"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/txtnormal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txt_post"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginRight="@dimen/form"
                    android:layout_marginBottom="@dimen/form"
                    android:background="@drawable/edttxt_background"
                    android:ems="10"
                    android:hint="Type your message here"
                    android:inputType="textLongMessage"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/form"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/btn_large"
                        android:layout_weight="0.5"
                        android:background="@drawable/background_btn"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/btnCancel"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_submitpost"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/btn_large"
                        android:layout_weight="0.5"
                        android:background="@drawable/background_btn"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/btnBookNow"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="402dp"
        android:layout_height="255dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/_25057_p9lb9f_438_removebg_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>