<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434">

    <ScrollView
        android:layout_width="416dp"
        android:layout_height="752dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="#686565">

                <View
                    android:id="@+id/view"
                    android:layout_width="404dp"
                    android:layout_height="216dp"
                    android:background="@drawable/design11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="96dp"
                    android:fontFamily="@font/combo"
                    android:text="Asanka"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView6"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="79dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:text="Hi., "
                    android:textColor="#DCDAD4"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/textView32"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="226dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/single_day"
                    android:text="Trans Solution for you"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="57dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/profile11" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="92dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="#090707"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="309dp"
                    android:layout_height="621dp"
                    android:background="@drawable/white_background"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:outlineAmbientShadowColor="#333030"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="269dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/image_public" />

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="88dp"
                        android:background="@drawable/layout_background"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="272dp"
                                android:layout_height="85dp"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="270dp"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/btnRide"
                                        android:layout_width="84dp"
                                        android:layout_height="84dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginBottom="1dp"
                                        android:background="#E0ECEB"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/txtRide"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/layout_background_circle" />

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="68dp"
                                        android:layout_height="62dp"
                                        android:layout_marginStart="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/btnRide"
                                        app:layout_constraintStart_toStartOf="@+id/btnRide"
                                        app:layout_constraintTop_toTopOf="@+id/btnRide"
                                        app:layout_constraintVertical_bias="0.52"
                                        app:srcCompat="@drawable/ic_bus1" />

                                    <TextView
                                        android:id="@+id/txtRide"
                                        android:layout_width="113dp"
                                        android:layout_height="37dp"
                                        android:layout_marginStart="9dp"
                                        android:layout_marginTop="23dp"
                                        android:layout_marginEnd="39dp"
                                        android:layout_marginBottom="25dp"
                                        android:text="Ride"
                                        android:textColor="#000000"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/btnRide"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="88dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/layout_background"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/btnBooking"
                                        android:layout_width="84dp"
                                        android:layout_height="84dp"
                                        android:layout_marginStart="16dp"
                                        android:backgroundTint="#E0ECEB"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/layout_background_circle" />

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="16dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/btnBooking"
                                        app:layout_constraintEnd_toEndOf="@+id/btnBooking"
                                        app:layout_constraintHorizontal_bias="0.441"
                                        app:layout_constraintStart_toStartOf="@+id/btnBooking"
                                        app:srcCompat="@drawable/ic_booking_list1" />

                                    <TextView
                                        android:id="@+id/txtBooking"
                                        android:layout_width="119dp"
                                        android:layout_height="38dp"
                                        android:layout_marginTop="32dp"
                                        android:layout_marginEnd="36dp"
                                        android:text="Booking"
                                        android:textColor="#000000"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="88dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/layout_background"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/btnRequest"
                                        android:layout_width="84dp"
                                        android:layout_height="84dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginEnd="10dp"
                                        android:backgroundTint="#E0ECEB"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/textReq"
                                        app:layout_constraintHorizontal_bias="0.0"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.6"
                                        app:srcCompat="@drawable/layout_background_circle" />

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="54dp"
                                        android:layout_height="55dp"
                                        android:layout_marginBottom="16dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/btnRequest"
                                        app:layout_constraintEnd_toEndOf="@+id/btnRequest"
                                        app:layout_constraintHorizontal_bias="0.511"
                                        app:layout_constraintStart_toStartOf="@+id/btnRequest"
                                        app:srcCompat="@drawable/ic_passenger_request1" />

                                    <TextView
                                        android:id="@+id/textReq"
                                        android:layout_width="113dp"
                                        android:layout_height="37dp"
                                        android:layout_marginTop="27dp"
                                        android:layout_marginEnd="40dp"
                                        android:layout_marginBottom="26dp"
                                        android:text="Request"
                                        android:textColor="#000000"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="88dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/layout_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/btnDrive1"
                                        android:layout_width="81dp"
                                        android:layout_height="75dp"
                                        android:layout_marginStart="16dp"
                                        android:backgroundTint="#E0ECEB"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.6"
                                        app:srcCompat="@drawable/layout_background_circle" />

                                    <ImageView
                                        android:id="@+id/imageView9"
                                        android:layout_width="61dp"
                                        android:layout_height="56dp"
                                        android:layout_marginTop="4dp"
                                        app:layout_constraintEnd_toEndOf="@+id/btnDrive1"
                                        app:layout_constraintHorizontal_bias="0.55"
                                        app:layout_constraintStart_toStartOf="@+id/btnDrive1"
                                        app:layout_constraintTop_toTopOf="@+id/btnDrive1"
                                        app:srcCompat="@drawable/ic_driver_request" />

                                    <TextView
                                        android:id="@+id/btnDrive2"
                                        android:layout_width="91dp"
                                        android:layout_height="30dp"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginEnd="60dp"
                                        android:layout_marginBottom="32dp"
                                        android:text="Drivers"
                                        android:textColor="#000000"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.0" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="88dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/btnCharges"
                                        android:layout_width="85dp"
                                        android:layout_height="79dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="4dp"
                                        android:backgroundTint="#E0ECEB"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/layout_background_circle" />

                                    <ImageView
                                        android:id="@+id/imageView10"
                                        android:layout_width="60dp"
                                        android:layout_height="54dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/btnCharges"
                                        app:layout_constraintEnd_toEndOf="@+id/btnCharges"
                                        app:layout_constraintHorizontal_bias="0.52"
                                        app:layout_constraintStart_toStartOf="@+id/btnCharges"
                                        app:layout_constraintTop_toTopOf="@+id/btnCharges"
                                        app:layout_constraintVertical_bias="0.52"
                                        app:srcCompat="@drawable/icon_charges" />

                                    <TextView
                                        android:id="@+id/txtCharges"
                                        android:layout_width="128dp"
                                        android:layout_height="35dp"
                                        android:text="Charges"
                                        android:textColor="#000000"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/btnCharges"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>