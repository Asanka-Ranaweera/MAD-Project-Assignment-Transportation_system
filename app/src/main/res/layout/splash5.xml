<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/running_removebg_preview">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#343434"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="581dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="403dp"
                    android:layout_height="847dp"
                    android:background="@drawable/top_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="397dp"
                    android:layout_height="576dp"
                    android:background="@drawable/running_removebg_preview"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_bubbles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/circles" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="302dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel2"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/btn_large"
                    android:layout_weight="0.5"
                    android:background="@drawable/background_btn"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="Get Started"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="112dp"
                    tools:layout_editor_absoluteY="177dp" />

                <TextView
                    android:id="@+id/txr_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trans"
                    android:textColor="#ffffff"
                    android:textSize="34sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="7dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="359dp"
                    android:layout_height="100dp"
                    android:text="No need of waiting in long queues"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="#8b8b8b"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="18dp"
                    tools:layout_editor_absoluteY="61dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>