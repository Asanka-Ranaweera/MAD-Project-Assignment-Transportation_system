<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#343434"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="360dp"
                    android:background="@drawable/top_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_bubbles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/circles" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="@+id/img_bubbles"
                    app:layout_constraintHorizontal_bias="0.045"
                    app:layout_constraintStart_toStartOf="@+id/img_bubbles"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.05"
                    app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

                <TextView
                    android:id="@+id/txt_Hi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookingID"
                    android:textColor="#ffffff"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="56dp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    tools:layout_editor_absoluteX="-16dp"
                    tools:layout_editor_absoluteY="124dp">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/layout"
                        android:background="@drawable/edttxt_background"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/txr_trans"
                        tools:layout_editor_absoluteX="20dp">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transport Service"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="305dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_profile"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/profile" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="11dp"
                                    android:layout_weight="1"
                                    android:text="@string/VecOwnerName"
                                    android:textAlignment="textEnd"
                                    android:textColor="#0F7015"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/Address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Mr. S. Perera"
                                    android:textAlignment="textEnd"
                                    android:textColor="#5b5b5b"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/Type"
                                android:textColor="#0F7015"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/Address"
                                android:layout_width="189dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/ServiceType"
                                android:textAlignment="textEnd"
                                android:textColor="#5b5b5b"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/vType"
                                android:textColor="#0F7015"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/Address"
                                android:layout_width="189dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bus"
                                android:textAlignment="textEnd"
                                android:textColor="#5b5b5b"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/StartingPoint"
                                android:textColor="#0F7015"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtAddress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/EndingPoint"
                                android:textColor="#0F7015"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/fee"
                                android:textColor="#0F7015"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/Gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rs.0.00"
                                android:textAlignment="textEnd"
                                android:textColor="#5b5b5b"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/phoneNo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/form"
                        android:text="@string/pickPoint"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txtnormal"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_pno3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/layout"
                        android:layout_marginRight="@dimen/form"
                        android:layout_marginBottom="@dimen/form"
                        android:background="@drawable/edttxt_background"
                        android:ems="10"
                        android:hint="@string/pickPoint"
                        android:inputType="@android:string/emptyPhoneNumber"
                        android:padding="12dp"
                        android:textColor="#707070"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/phoneNo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/form"
                        android:text="@string/desPoint"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txtnormal"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_pno4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/layout"
                        android:layout_marginRight="@dimen/form"
                        android:layout_marginBottom="@dimen/form"
                        android:background="@drawable/edttxt_background"
                        android:ems="10"
                        android:hint="Enter your drop point"
                        android:inputType="@android:string/emptyPhoneNumber"
                        android:padding="12dp"
                        android:textColor="#707070"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/postContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout"
                        android:layout_marginTop="@dimen/form"
                        android:layout_marginRight="@dimen/form"
                        android:text="Meesage for the driver"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txtnormal"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_post2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="@dimen/layout"
                        android:layout_marginRight="@dimen/form"
                        android:layout_marginBottom="@dimen/form"
                        android:background="@drawable/edttxt_background"
                        android:ems="10"
                        android:hint="@string/message"
                        android:inputType="textLongMessage"
                        android:padding="12dp"
                        android:textColor="#707070"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_EditProfile"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/layout"
                            android:layout_weight="0.5"
                            android:background="@drawable/background_btn"
                            android:text="@string/btnCancel"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_EditProfile2"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/layout"
                            android:layout_weight="0.5"
                            android:background="@drawable/background_btn"
                            android:text="@string/btnEdt"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_EditProfile3"
                            style="@android:style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/layout"
                            android:layout_weight="0.5"
                            android:background="@drawable/background_btn"
                            android:text="@string/btnDelete"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="63dp"
                    android:layout_height="54dp"
                    android:background="@drawable/grey_background"
                    android:padding="@dimen/layout"
                    app:srcCompat="@drawable/baseline_message_24"
                    tools:layout_editor_absoluteX="285dp"
                    tools:layout_editor_absoluteY="56dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/btn_medium"
                    android:text="Messages"
                    tools:layout_editor_absoluteX="269dp"
                    tools:layout_editor_absoluteY="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>